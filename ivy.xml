<ivy-module version="2.0">
    <info organisation="com.lucidworks.demo" module="autophrase-tokenfilter"/>

    <configurations defaultconfmapping="default">
        <conf name="default" extends="compile"/>
        <conf name="compile"/>
        <conf name="test" extends="compile" visibility="private"/>
    </configurations>

    <dependencies>
        <dependency org="org.apache.lucene" name="lucene-analyzers-common" rev="6.2.1" conf="compile->default"/>
        <dependency org="org.apache.lucene" name="lucene-core" rev="6.2.1" conf="compile->default"/>
        <dependency org="org.apache.lucene" name="lucene-codecs" rev="6.2.1" conf="compile->default"/>
        <dependency org="org.apache.lucene" name="lucene-test-framework" rev="6.2.1" conf="test->default"/>
        <dependency org="org.apache.solr" name="solr-core" rev="6.2.1" conf="compile->default"/>
        <dependency org="org.apache.solr" name="solr-solrj" rev="6.2.1" conf="compile->default"/>
        <dependency org="org.apache.solr" name="solr-test-framework" rev="6.2.1" conf="test->default"/>
        <dependency org="org.slf4j" name="slf4j-api" rev="1.7.6" conf="compile->default"/>
    </dependencies>
</ivy-module>
